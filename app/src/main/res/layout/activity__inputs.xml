<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:orientation="vertical"
    tools:context=".Activity_Inputs">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/bevorzugte_nutzeranzahl" />

    <EditText
        android:id="@+id/eTAmountCustomer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/h_chstpreis_euro_nutzer" />

    <EditText
        android:id="@+id/eTPricePerCustomer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bevorzugte Plattform/en" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/cBWeb"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="Web" />

        <CheckBox
            android:id="@+id/cBAndroid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Android" />

        <CheckBox
            android:id="@+id/cB_IOs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="IOs" />

        <CheckBox
            android:id="@+id/cBWindows"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Windows" />

        <CheckBox
            android:id="@+id/cBMac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Mac" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bevorzugte SpeicherkapazitÃ¤t der Cloud des Anbieters" />

    <EditText
        android:id="@+id/eTStorageCloud"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number" />

    <Button
        android:id="@+id/bt_InputsContinue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fortfahren" />

</LinearLayout>